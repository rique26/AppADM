<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Edit_Text">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:fontFamily">@font/nunito_bold_ita</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/cinza_claro</item>
        <item name="android:textSize">17sp</item>
    </style>


    <style name="Button">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonCadastro">
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContainerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/container_components</item>
    </style>

    <style name="Edit_Text_Cadastro">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/edit_text_cadastro</item>
        <item name="android:fontFamily">@font/nunito_bold_ita</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/cinza_escuro</item>
        <item name="android:textColorHint">@color/cinza_escuro</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar</item>
    </style>

    <style name="roundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>

    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>




</resources>